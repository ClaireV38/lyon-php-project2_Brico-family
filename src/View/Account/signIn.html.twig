{% extends 'layout.html.twig' %}

{% block content %}
    <div class="looking_for_block container container-custom">
        <div class="intro-signin">
            <h2> Bonjour !</h2>
            <p>Connecte-toi pour déposer ton annonce et découvrir toutes nos fonctionnalités.</p>
        </div>
        <form method="POST" action="/User/signin" novalidate >
            <div class="form-group">
                <label for="exampleInputEmail1">Email</label>
                <input type="email" class="form-control" id="exampleInputEmail1" name="email" aria-describedby="emailHelp" value="{{ signInInfos.email}}" >
            </div>
            <div class="errors">
                {% if errors.email is defined %}
                    {{ errors.email }}
                {% endif %}
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Mot de passe</label>
                <input type="password" class="form-control" name="password" id="exampleInputPassword1">
            </div>
            <div class="errors">
                {% if errors.password is defined %}
                    {{ errors.password }}
                {% endif %}
            </div>
            <button type="submit" name="btn-signIn" class="btn-go btn-custom btn btn-light">Go !</button>
        </form>
        <div class="account-creation">
            <p>Envie de nous rejoindre ? </p>
            <button type="submit" name="btn-account-creation" class="btn-account-creation btn btn-custom btn-light">Créer mon compte</button>
        </div>
    </div>
{% endblock %}