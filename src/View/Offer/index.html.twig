{% extends 'layout.html.twig' %}

{% block content %}
    <div class="looking_for_block container">
        <h1>Je cherche</h1>
        <form>
            <div class="form-check-inline">
                <div>
                    <input type="radio" name="tool_or_material" id="tool" class="form-check-input"/>
                    <label for="tool" class="form-check-label">Un outil</label>
                </div>
                <div>
                    <input type="radio" name="tool_or_material" id="material" class="form-check-input"/>
                    <label for="material" class="form-check-label">Un materiau</label>
                </div>
            </div>
            <div class="form-group">
                <select name="tools_categories" id="tools_categories" class="form-control unvisible">
                    {% for category in categories.tools %}
                    <option value="{{ category }}">{{ category }}</option>
                    {% endfor %}
                </select>
                <select name="materials_categories" id="materials_categories" class="form-control unvisible">
                    {% for offer in offers %}
                        <option value="{{ offer.category }}">{{ offer.category }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label for="selling_rending">A vendre / A louer</label><br />
                <select name="selling_rending" id="selling_rending" class="form-control">
                    <option value="selling">Vente</option>
                    <option value="rending">Location</option>
                </select>
            </div>
            <div class="form-group">
                <label for="departement">departement</label><br/>
                <select name="departement" id="departement" class="form-control">
                    {% for offer in offers %}
                        <option value="{{ offer.departement }}">{{ offer.departement }}</option>
                    {% endfor %}
                </select>
            </div>
            <button  type="submit" name="btn-submit" value="submit" class="btn btn-light">Go !</button>
        </form>
    </div>
{% endblock %}
{% block javascript %}
    <script>
        const selectToolsCategories = document.querySelector("#tools_categories");
        const btnCheckTool = document.querySelector('#tool');
        const selectMaterialsCategories = document.querySelector("#materials_categories");
        const btnCheckMaterial = document.querySelector("#material");
        btnCheckTool.addEventListener('change', function() {
        selectToolsCategories.classList.remove("unvisible");
        selectMaterialsCategories.classList.add("unvisible");
        });
        btnCheckMaterial.addEventListener('change', function() {
        selectMaterialsCategories.classList.remove("unvisible");
        selectToolsCategories.classList.add("unvisible");
        });
    </script>
{% endblock %}
