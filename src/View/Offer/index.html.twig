{% extends 'layout.html.twig' %}

{% block content %}
    <div class="looking_for_block container">
        <h1>Je cherche</h1>
        <form method="post" action="/offer/index">
            <div class="form-check-inline">
                <div>
                    <input type="radio" name="product" id="tool"
                           class="form-check-input" value="tool"
                            {% if infos.product is same as ('tool') %}
                                checked
                            {% endif %}
                    />
                    <label for="tool" class="form-check-label">Un outil</label>
                </div>

                <div>
                    <input type="radio" name="product" id="material"
                           class="form-check-input" value="material"
                            {% if infos.product is same as ('material') %}
                                checked
                            {% endif %}
                    />
                    <label for="material" class="form-check-label">Un matériau</label>
                </div>
            </div>
            <div class="errors">
                {% if errors.product is defined %}
                    {{ errors.product }}
                {% endif %}
            </div>
            <div class="form-group">
                <select name="tools_categories" id="tools_categories" class="form-control
                {% if infos.product is not same as ('tool') %}
                    invisible
                {% endif %}
                ">
                    <option value="" disabled selected>Selectionnez une catégorie d'outil</option>
                    {% for category in categories.tools %}
                        <option value="{{ category }}">{{ category }}</option>
                    {% endfor %}
                </select>
                <select name="materials_categories" id="materials_categories" class="form-control
                {% if infos.product is not same as ('material') %}
                    invisible
                {% endif %}
                ">
                    <option value="" disabled selected>Selectionnez une catégorie de matériau</option>
                    {% for category in categories.materials %}
                        <option value="{{ category }}">{{ category }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="errors">
                {% if errors.category is defined %}
                    {{ errors.category }}
                {% endif %}
            </div>
            <div class="form-group">
                <label for="transaction">Recherchez vous un produit à la vente ou à la location ?</label>
                <select name="transaction" id="transaction" class="form-control">
                    {% if infos.transaction is not same as ('') %}
                        <option value="{{ infos.transaction }}">{{ infos.transaction }}</option>
                    {% endif %}
                    {% for transaction in transactions if transaction is not same as (infos.transaction) %}
                        <option value="{{ transaction }}">{{ transaction }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label for="department">département de recherche :</label>
                <select name="department" id="department" class="form-control">
                    {% if infos.department is not same as ('') %}
                        <option value="{{ infos.department }}">{{ infos.department }}</option>
                    {% endif %}
                    {% for offer in offers if offer.department is not same as (infos.department) %}
                        <option value="{{ offer.department }}">{{ offer.department }}</option>
                    {% endfor %}
                </select>
            </div>
            <button type="submit" name="btn-index-search" value="submit" class="btn btn-light">Go !</button>
        </form>
    </div>
{% endblock %}
{% block javascript %}
<script>
    const selectToolsCategories = document.querySelector("#tools_categories");
    const btnCheckTool = document.querySelector('#tool');
    const selectMaterialsCategories = document.querySelector("#materials_categories");
    const btnCheckMaterial = document.querySelector("#material");
    btnCheckTool.addEventListener('change', function() {
    selectToolsCategories.classList.remove("invisible");
    selectMaterialsCategories.classList.add("invisible");
});
    btnCheckMaterial.addEventListener('change', function() {
    selectMaterialsCategories.classList.remove("invisible");
    selectToolsCategories.classList.add("invisible");
});
</script>
{% endblock %}
